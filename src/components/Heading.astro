---
type Props = {
  level: 1 | 2 | 3;
  className?: string;
  link?: string | undefined;
};

const classes = [
  "text-4xl font-bold",
  "text-2xl font-bold",
  "text-xl dark:text-gray-200",
];

const { level, className, link } = Astro.props;
---

{
  link ? (
    <a class={`${classes[level - 1]} ${className}`} href={link} target="_blank">
      <slot />
    </a>
  ) : (
    <h1 class={`${classes[level - 1]} ${className}`}>
      <slot />
    </h1>
  )
}
